{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:3000",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "RoCoX Codex",
		"version": "1.0.0-alpha.4"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"http": {
				"all": true,
				"request": true,
				"scope": ["http://**", "https://**"]
			}
		},
		"bundle": {
			"active": true,
			"targets": "nsis",
			"identifier": "com.nesercode.rocox-codex.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": false,
				"title": "RoCox Codex",
				"width": 500,
				"height": 600,
				"decorations": false,
				"visible": false
			}
		],
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true
		}
	}
}
